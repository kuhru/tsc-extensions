{
  "name": "tsc-extension",
  "version": "1.0.0",
  "description": "",
  "private": "false",
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vitest",
    "test": "vitest run",
    "build": "tsup src/index.ts --format cjs,esm --legacy-output --dts",
    "lint": "tsc",
    "postBuild": "sh postBuild.sh",
    "ci": "pnpm run lint && pnpm run test && pnpm run build && pnpm run postBuild"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/esm/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "keywords": [],
  "author": "kuhru",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.14.1",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5",
    "vitest": "^0.28.5"
  }
}
